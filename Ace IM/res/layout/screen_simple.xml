<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" 
        android:background="@color/transparent">

        <RelativeLayout android:id="@+id/top_bar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/top_bottom_bar_height"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/top_bottom_bar_background" 
            android:paddingTop="@dimen/top_bar_padding">

            <aceim.app.widgets.bottombar.BottomBarButton
                android:id="@+id/menu_button"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"                
                android:scaleType="center"
                android:src="@drawable/menu_button_caption" 
                android:visibility="gone"/>
            
            <aceim.app.widgets.pageselector.TabSelector
                android:id="@+id/tab_selector"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@id/menu_button"
                android:fadingEdge="none"
                android:fadingEdgeLength="0px"
                android:scrollbars="none" 
                style="@style/TabWidget"/>    
            <ImageView 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/tab_selected_bar_right"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_below="@id/tab_selector"/>        
        </RelativeLayout>

        <FrameLayout
            android:id="@+id/fragment_holder"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_below="@id/top_bar"
            android:layout_centerVertical="true"
            android:layout_gravity="center" />
    </RelativeLayout>

</FrameLayout>